library(readxl)
BeerData <- read_excel("Documents/Case Study 2/AnadoluEfesData.xls",
sheet = "Table A3", skip = 2)
View(AnadoluEfesData)

TourismData <- read_excel("Documents/Case Study 2/AnadoluEfesData.xls",
sheet = "Table A4", skip = 2)
View(TourismData)

attach(BeerData)
attach(TourismData)

#Add ID to Beer Data
BeerData <- head(BeerData,-3)
ID <- seq.int(nrow(BeerData))
BeerData <- cbind(BeerData,ID)

#Add ID to Tourism Data
TourismData <- cbind(TourismData,ID)

# merge two data frames by ID
TotalData <- merge(BeerData,TourismData,by="ID")
View(TotalData)
TotalData = subset(TotalData, select = -c(Year.y,Month.y) )

#Make Time Series for Beer Data
BeerDemand = ts(`Beer Consumption  (lt)`, start=c(1987,1), frequency = 12)

#Plot Beer Demand
options(scipen = 3)
plot(BeerDemand, ylab = "Beer Demand (Liters)", main = "Beer Demand (1987-1993)")

#plot scatterplot with trendline to show Beer Price and Consumption
plot(`Average Beer Price*`,`Beer Consumption  (lt)`)
abline(lm(`Beer Consumption  (lt)`~`Average Beer Price*`))

#plot scattermatrix
plotdata = data.frame(TotalData[,4:15])
plot(plotdata)

#plot scattermatrix with trendlines
pairs(plotdata)
pairs(plotdata, lower.panel = panel.smooth, upper.panel = panel.smooth)

#plot correlation matrix
cor(plotdata)

#create regression model (1)
regmodel = lm(`Beer Consumption  (lt)`~`Average Beer Price*`+`Average Canned Beer Price*`+`Average Canned Soft Drink Price*`+`Average Draft Beer Price*`+`Average Raki Price*`+Czechoslovakia+Germany +`The United Kingdom`+`The United States`+France+`Others (Total)`,data= TotalData)
summary(regmodel)

#see the fit of model (1)
plot(regmodel)

#modify regression model (2)
regmodel2 = lm(`Beer Consumption  (lt)`~`Average Beer Price*`+`Average Canned Soft Drink Price*`+`Average Draft Beer Price*`+`Average Raki Price*`+Czechoslovakia+Germany +`The United Kingdom`+`The United States`+France+`Others (Total)`,data= TotalData)
summary(regmodel2)

#see the fit of modified model (2)
plot(regmodel2)

#Use step to manually take out variables that are super insignificant (3)
step.model = step(regmodel, direction="backward", trace=0, k=2)
summary(step.model)

#check residual vs. fit (3)
plot(step.model)

#test for multicollinearity-- greater than 4 or 10? (3)
install.packages("car")
library("car")
vif(step.model)

#new model without multicollinearity variable (4)
fixmodel = lm(`Beer Consumption  (lt)` ~ `Average Canned Beer Price*` + `Average Canned Soft Drink Price*` + `Average Raki Price*` + Czechoslovakia + `The United Kingdom` + France, data = TotalData)
summary(fixmodel)

#New data frame with relevant variables for fixed model 
fixdata=data.frame(TotalData[,4], TotalData[,6:8],TotalData[,10],TotalData[,12],TotalData[,14])
colnames(fixdata) <- c("Beer Consumption (lt)","Average Raki Price","Average Canned Soft Drink Price","Average Canned Beer Price","Czechoslovakia","The United Kingdom", "France")

#check for correlation of relevant variables
cor(fixdata)

#vif fix model to check for multicollinearity (4)
vif(fixmodel)

#plot to see fit (4)
plot(fixmodel)

#step model to get rid of any other variables (5)
step.model2 = step(fixmodel, direction="backward", trace=0, k=2)
summary(step.model2)

#check for multicollinearity in final step model (5)
vif(step.model2)

#plot to see fit (5)
plot(step.model2)

